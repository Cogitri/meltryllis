#!/bin/sh
_bargeo="140x30+890+0"

create-fifo "$_fifo"

trap "rm -f $_fifo" EXIT QUIT TERM

get_battery() {
	_cap="$(cat /sys/class/power_supply/BAT0/capacity)"
	[ "$_cap" -gt 100 ] && echo "100" || echo "$_cap"
}

wait_battery() {
	while :; do
		_bat="$(get_battery)"
		case "$_bat" in
			[0-9]|1[0-9]|2[0-5]) echo "low ($_bat%) battery" > "$_fifo" ;;
			2[6-9]|3[0-9]|4[0-9]|5[0-9]|6[0-9]|7[0-9]|80)
				echo "avg ($_bat%) battery" > "$_fifo" ;;
			8[0-9]|9[0-9]|100) echo "high ($_bat%) battery" > "$_fifo" ;;
		esac
		sleep 30
	done
}

wait_battery &

while :; do
	echo "%{c}$(cat "$_fifo")"
done | lemonbar -f "${_barfont}" \
				-B "${_barbg}" \
				-F "${_barfg}" \
				-g "${_bargeo}" \
				-b -n "${_n}"
