#!/bin/sh
# SPDX-License-Identifier: GPL-3.0-only
# dlbr BRANCH... - Delete local and remote branches matching name
user=$(git config --get user.name)
repo=$(basename "$(git config --get remote.origin.url)")

delete_remote_branch() {
	curl --netrc --fail --request DELETE \
		 https://api.github.com/repos/"$user"/"$repo"/git/refs/heads/"$1" \
		 >/dev/null 2>&1 ||
		 { 
			 [ $? = 22 ] || 
				printerr "Failed to delete remote branch $1" ;
				return 
		 } &&
		 printok "Deleted remote branch $1"

}

delete_local_branch() {
	if ! git rev-parse --verify "$1" >/dev/null 2>&1
	then
		return 0
	fi

	if [ "$1" = "$(git rev-parse --abbrev-ref HEAD)" ]
	then
		git checkout master >/dev/null 2>&1
	fi

	git branch -D "$1" >/dev/null 2>&1 ||
		{ printerr "Failed to delete local $1"; return ; } &&
		printok "Deleted local branch $1"
}

while [ $# -gt 0 ]
do
	delete_remote_branch "$1" &
	delete_local_branch "$1" &
	shift
done

wait

