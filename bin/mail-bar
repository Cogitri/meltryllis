#!/bin/sh
_bargeo="100x30+650+0"

create-fifo "$_fifo"

trap "rm -f $_fifo" EXIT QUIT TERM

mcount() {
	mail_count="$(( $(fcount "${MAILDIR}/new" ) + $(fcount "${MAILDIR}/cur") ))"
	case "$mail_count" in
		0) echo 'no new mail' ;;
		*) echo "$mail_count new mail" ;;
	esac
}

mail_wait() {
	mcount > "$_fifo"
	inotifywait -q -m "${MAILDIR}/new" "${MAILDIR}/cur" -e create -e delete |
		while read -r _; do
			mcount > "$_fifo"
		done
}

# Start our mail daemon
mail_wait &

while :; do
	echo "%{c}$(cat "$_fifo")"
done | lemonbar -f "${_barfont}" \
				-B "${_barbg}" \
				-F "${_barfg}" \
				-g "${_bargeo}" \
				-b -n "${_n}"
