#!/bin/sh
_bargeo="55x24+770+0"

create-fifo "$_fifo"

trap "rm -f $_fifo" EXIT QUIT TERM

mcount() {
	echo $(( $(fcount "${MAILDIR}/new" ) + $(fcount "${MAILDIR}/cur") ))
}

mail_wait() {
	mcount > "$_fifo"
	inotifywait -q -m "${MAILDIR}/new" "${MAILDIR}/cur" -e create -e delete |
		while read -r _; do
			mcount > "$_fifo"
		done
}

# Start our mail daemon
mail_wait &

while :; do
	echo "%{c}${_t}MAIL: ${_r}$(cat "$_fifo") "
done | lemonbar -f "${_barfont}" \
				-B "${_barbg}" \
				-F "${_barfg}" \
				-g "${_bargeo}" \
				-b -n "${_n}"
