#!/bin/sh
_bargeo="280x30+310+0"
_barfg="#010101"
_barbg="#d2d2d2"
_r="${_barfg}"
_t="${_barfg}"

while :; do
	echo "%{c}clock: $(date "+%H:%M")  seattle: $(TZ=America/Los_Angeles date "+%H:%M")  berlin: $(TZ=Europe/Berlin date "+%H:%M")"
	sleep 60
done | lemonbar -f "${_barfont}" \
				-f "${_barfont2}" \
				-B "${_barbg}" \
				-F "${_barfg}" \
				-g "${_bargeo}" \
				-b -n "${_n}"
