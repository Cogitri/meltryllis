#!/bin/sh
[ "$#" -lt 1 ] && set "$(git rev-parse --abbrev-ref HEAD)"
pr() {
	git rebase upstream/master >/dev/null 2>&1
	git push -uf origin "$1" >/dev/null 2>&1
	if [ "$(git rev-list --count master.."$1")" -gt 1 ]
	then
		hub pull-request -h "$1" --edit
	else
		hub pull-request -h "$1" --no-edit
	fi
}
while [ $# -gt 0 ]
do
	pr "$1"
	shift
done
