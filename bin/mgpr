#!/bin/sh
# SPDX-License-Identifier: GPL-3.0-only
# mgpr PR-NUM - Merges a pull request by number

user="$(get-repo-config username)"
repo_name="$(get-repo-config repo-name)"
repo_owner="$(get-repo-config repo-owner)"

r=0

cd "$(xdistdir)" || exit

while [ $# -gt 0 ]
do
	case $1 in
		''|*[!0-9]*) shift ; continue;;
		*) ;;
	esac

	prinfo="$(hub api repos/"${repo_owner}"/"${repo_name}"/pulls/"$1" --flat)"

	label="$(echo "$prinfo" | awk '/.head.label/ { print $2 }')"
	title="$(echo "$prinfo" | awk -P '/.title/ { for(i=2;i<=NF;i++) print $i}' | paste -sd ' ')"

	response="$(hub api repos/"${repo_owner}"/"${repo_name}"/pulls/"$1"/merge \
		 -X PUT -F merge_method=rebase --flat)" ||
		 {
			 printerr "Failed to merge $1" ;
			 r=$((r+1))
			 [ $r -gt 1 ] && { echo "$response" | grep -o '^.message.*' ; exit $r ; }
			 continue ;
		 } &&
		 {
			 printok "Merged '$title' ($1)"
			 r=0
		 }
	
	shift


	if [ "$(echo "$label" | cut -d : -f1)" = "$user" ]; then
		dlbr $(echo "$label" | cut -d : -f2)
	fi

	branch="$(echo "$label" | cut -d : -f2)"
	if git rev-parse --verify "$repo" >/dev/null 2>&1
	then
		dlbr $branch
	fi
done
