#!/bin/sh
_bargeo="316x24+1050+0"

create-fifo "$_fifo"

trap "rm -f $_fifo" EXIT QUIT TERM

parse() {
	state="$(mpc status | tail -n2 | grep -o '\[.*\]')"
	if [ "$state" = '[playing]' ];then
		state="$(mpc current --format '%file%' | sed 's/.\(ogg\|opus\|mp3\).*//')"
	else
		state="$(echo ${state:-'Stopped'} | tr -d '[' | tr -d ']')"
	fi

	printf "%s\\n" "$state"
}

music_wait() {
	parse > "$_fifo"
	while :; do
		mpc idle
		parse > "$_fifo"
		notify-send "$(parse)" -a "MPD"
	done
}

music_wait &

while :; do
	echo "%{c}$(head -c 45 < $_fifo)"
done | lemonbar -f "${_barfont}" \
				-B "${_barbg}" \
				-F "${_barfg}" \
				-g "${_bargeo}" \
				-b -n "${_n}"
