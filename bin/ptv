#!/bin/sh
branch="$(git rev-parse --abbrev-ref HEAD)"

push_to() {
	ansi --cyan-intense -n "== PUSHING TO $1"
	git push "$1" >/dev/null 2>&1 ||
		ansi --red-intense -n "<= FAILED TO PUSH $1" &&
		ansi --green-intense -n "=> $1 PUSHED"
}

if [ "$branch" != "master" ]
then
	ansi --red-intense -n "<= NEEDS TO BE IN BRANCH MASTER"
	exit 1
fi

ansi --yellow-intense -n "== COMMITS TO BE PUSHED"
gcp

if [ -f "${XDG_RUNTIME_DIR}/push-to-void" ]
then
	ansi --yellow-intense -n "== BRANCHES TO BE CLEARED"
	cat "${XDG_RUNTIME_DIR}/push-to-void"
else
	ansi --yellow-intense -n "== NO BRANCHES TO BE CLEANED"
fi

push_to origin
push_to upstream

if [ -f "${XDG_RUNTIME_DIR}/push-to-void" ]
then
	while read -r branch
	do
		git-clean-branches "$branch" >/dev/null 2>&1 ||
			ansi --red-intense -n "<= FAILED TO CLEAN BRANCH $branch" &&
			ansi --green-intense -n "=> CLEANED BRANCH $branch"
	done < "${XDG_RUNTIME_DIR}/push-to-void"
	rm -f "${XDG_RUNTIME_DIR}/push-to-void"
fi
